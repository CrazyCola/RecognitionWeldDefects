<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.olechka.recognitionwelddefects.Otchet">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Отчёт распознаных дефектов :"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/defect_widthWeld"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:src="@drawable/width" />

                <EditText
                    android:id="@+id/width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="Дефект ширины шва"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </GridLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp">

            <EditText
                android:id="@+id/editText0"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_column="0"
                android:layout_row="3"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Неравномерная ширина шва,отклонение ширины от установленного значения вдоль сварного шва"
                android:textSize="15dp"
                android:textStyle="normal" />


        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/defect_matalSpatter"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:src="@drawable/brizgi" />

                <EditText
                    android:id="@+id/brizgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="Дефект брызги металла"
                    android:textStyle="bold" />

            </GridLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="169dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_column="0"
                android:layout_row="3"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Внешние признаки: мелкие капли электродного металла, осевшие на лицевую сторону сварного соединения и плотно сцепившиеся с поверхностью основного металла. Дефект виден невооруженным глазом при визуальном контроле."
                android:textSize="15dp"
                android:textStyle="normal" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
